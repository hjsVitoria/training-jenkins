pipeline {
    agent none
    stages {
	    stage('build') {
		    agent {
		    	docker{
				image 'maven:latest'
			}
		    }
		    steps {
			sh 'mvn --version'
		    }
	    }
	    stage('test') {
		    agent {
		    	docker{
				image 'alpine:latest'
			}
		    }		    
		    steps {
			sh 'alpine --version'
		    }
	    }
	}
}
