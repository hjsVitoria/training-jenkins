pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
	parameters{
		string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Qual stage?')
	}
    stages {
	    stage('build'){
	    steps{
	    echo 'build stage'
	    }
	    }
	    stage('test'){
	    steps{
	    echo 'test stage'
	    }
	    }
    }
}
