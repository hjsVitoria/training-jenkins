pipeline {
	agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
	environment{
		BUILD_CONFIGS = '''[{name: "teste", command: "echo java"},{name: "teste1", command: "echo maven"}]'''
	}
	stages {
		stage('build') {
			steps {
				script {
					def buildConfigs = ${BUILD_CONFIGS}
					buildConfigs.each{ buildConfig ->
						sh "echo '$buildConfig.name' && $buildConfig.command"
					}
				}
			}
		}
	}
}
